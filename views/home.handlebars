<h1 style="font-family: Arial, Helvetica, sans-serif; text-align:center;">Seus posts</h1>
<a href="/cad"><button style="margin-bottom: 30px; padding: 12px; background: #2ca58d; border-radius: 15px; border: none; color:#F4FAFF; font-size: 14px;">Novo post+</button></a>

<div style="display: flex; flex-wrap: wrap; justify-content: space-evenly; align-items: center;">
    {{#each posts}}

        <div style="width: 340px; height: 100%; background: #3B3759; border-radius: 15px; box-shadow: 5px 5px 10px #3b3759; margin-bottom: 15px;">
            <div style="width: 100%; height: 45%; background: #7AACB3; box-shadow: 0px 6px 5px rgba(76, 110, 129, 0.25); border-radius: 15px;">
                <img class="unsplashImage" style="width: 100%; height: 300px; border-radius: 15px;"/>
            </div>
            <div style="padding: 15px; font-family:Arial, Helvetica, sans-serif;">
                <div style="color: #F4FAFF; width: 100%; margin-bottom: 45px;">
                    <h2 style="text-align: center;">{{titulo}}</h2>
                    <p style="text-align: justify;">{{conteudo}}</p>
                </div>
                <div style="color: #F4FAFF;">
                    <a href="/deletar/{{id}}"><button style="padding: 12px; background: #D3447C; border-radius: 15px; border: none; color:#F4FAFF; font-size: 14px;">Apagar post</button></a>
                    <small>{{createdAt}}</small>
                </div>
            </div>
        </div>

    {{/each}}
        <script>
            upImg()
            function upImg() {
                let clientId = 'xhebIctB-0VgR9wY98KNTlX3hV6xr6-4dsRmpUPHGlo';

                fetch("https://api.unsplash.com/photos/random/?client_id=" + clientId)
                    .then((response) => response.json())
                    .then((dados) => {
                        let link = dados.urls.regular;
                        let img = document.querySelector(".unsplashImage");
                        img.src = link;
                    })
                    .catch((erro) => alert("Limite de imagens por minutos atingido!"));
            } 
        </script>
</div>